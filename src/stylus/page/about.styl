.about__body
  font-family 'Raleway'

.about__header
  background linear-gradient(to right, #16ebbe, #04b4cb)
  padding 50px 70px 190px 70px
  position relative
  &:before
    background  url(../../images/about/back1.webp) right center no-repeat
    background-size cover
    content ""
    display block
    height 100%
    left 0
    opacity .1
    position absolute
    top 0
    width 100%
    z-index 0

.about__top
  display flex
  flex-direction row
  flex-wrap nowrap
  justify-content space-between
  z-index 1

.about__logo
  display flex
  p
    text-transform uppercase
    margin 0
    font-size 15px
    color #fff
  
.about__nav
  display flex
  flex-direction row
  justify-content center
  align-items center
  z-index 1
  a
    text-decoration none
    color #fff
    margin-right 50px
    &:last-child
      margin-right 0
    &:hover
      color #000

.about__login
  display flex
  justify-content right
  align-items flex-start
  z-index 1

#about__login-btn
  padding 8px 20px
  border 1px solid #fff
  cursor pointer
  a
    color #fff
    text-decoration none

.about__menu
  margin-top 170px
  display flex
  flex-direction row
  justify-content space-between
  z-index 1

.about__menu-content
  padding-right 100px
  display flex
  justify-content space-between
  flex-direction column
  z-index 1
  h1
    margin 0
    text-transform uppercase
    color #fff
    font-size 55px

  span
    color #fff
    font-size 18px
    line-height 32px

.about__menu-vid
  z-index 1
  img 
    opacity 1
    width 600px
    height 320px

.about__menu-buttons
  z-index 1
  button 
    padding 22px 42px
    border-radius 5px
    text-transform uppercase
    cursor pointer
    &:first-child
      margin-right 30px
    a
      text-decoration none

#about__buybtn
  z-index 1
  background #011834
  a
    color #fff

#about__trybtn
  z-index 1
  background #fff
  a
    color #000

.about__content
  padding 100px

.about__content-text
  display flex
  flex-direction column
  align-items center
  align-content center
  padding-bottom 100px
  h1
    margin 0
    font-size 45px
    font-weight 400
    padding-bottom 20px
  h2 
    font-size 25px
    color grey
    margin 0
    font-weight 400
    padding-bottom 20px
  span
    width 50%
    color grey
    text-align center

.about__content-tips
  display flex
  justify-content space-between
  margin-bottom 100px

.about__tip
  width 350px
  display flex
  justify-content center
  flex-direction column
  align-items center
  img 
    height 70px
    width 70px
  h3 
    margin 30px 0 20px 0
    font-size 24px
  span
    color grey
    text-align center

.about__content-bottom
  display flex
  justify-content center
  button 
    padding 18px 34px
    background-color #16eab7
    border-radius 5px
    text-transform uppercase
    font-weight 600
    cursor pointer
    box-shadow 0 3px 5px black
    a
      color #fff
      text-decoration none

.about__adv
  display flex
  flex-wrap nowrap

.about__adv-block
  width 25%
  display flex
  align-items center
  align-content center
  justify-content center
  padding 45px 0
  img 
    height 35px
    width 35px
    color #fff
    margin-right 10px
  &:first-child
    background-color #81d9ff
  &:nth-child(2)
    background-color #83b3ff
  &:nth-child(3)
    background-color #b489ff
  &:last-child
    background-color #eb81fc
  span  
    color #fff
    font-size 20px
    font-weight 600

.about__serv
  padding 100px 0

.about__serv-text
  display flex
  flex-direction column
  align-items center
  h1
    font-size 45px
    font-weight 400
    margin 0 0 25px 0
  span
    width 50%
    color grey
    line-height 24px
    text-align center

.about__serv-content
  padding-top 50px
  display flex
  justify-content center
  flex-direction column
  align-items center

.about__serv-block
  width 70vw
  box-shadow 0 0 5px grey
  border-radius 3px
  padding 25px
  margin-bottom 20px
  button 
    text-transform uppercase
    width 100%
    text-align left
    font-weight 600
    cursor pointer
    transition 0.4s
    svg
      height 20px
      float right
      
.about__serv__block-text1, .about__serv__block-text2, .about__serv__block-text3, .about__serv__block-text4, .about__serv__block-text5
  display none
  align-items center
  padding-top 25px
  overflow hidden
  transition max-height 0.2s ease-out
  span
    margin-left 25px
    font-style italic
    line-height 24px
  img 
    width 250px
    height 155px
      
.about__fb
  background linear-gradient(to right, #16ebbe, #04b4cb)
  padding 90px 70px
  display flex
  align-content center
  align-items center
  justify-content space-between
  position relative
  &:before
    background  url(../../images/about/back.webp) right center no-repeat
    background-size cover
    content ""
    display block
    height 100%
    left 0
    opacity .1
    position absolute
    top 0
    width 100%
    z-index 0

.about__fb-text
  display flex
  flex-direction column
  align-items flex-start
  height 100%
  margin-right 100px
  z-index 1
  h2
    font-size 45px
    margin 0 0 20px 0
    color #fff
    width 450px
    font-weight 400
  span
    color #fff
    margin-bottom 80px
    line-height 22px
  button 
    background-color #011834
    padding 22px 42px
    border-radius 5px
    text-transform uppercase
    cursor pointer
    a
      text-decoration none
      text-transform uppercase
      color #fff

.about__fb-connect
  display flex
  flex-direction column
  justify-content space-between
  z-index 1

.about__connect-block
  display flex
  align-items center
  align-content center
  margin-bottom 70px
  &:last-child
    margin-bottom 0
  img 
    height 60px
    width 60px

.about__connect__block-text
  margin-left 50px
  padding 15px 30px
  background-color #fff
  box-shadow 0 0 5px grey
  border-radius 5px
  h3 
    font-size 18px
  p
    font-style italic
    color grey
    line-height 22px 
  
.about__team
  display flex
  justify-content center
  flex-direction column
  align-content center
  align-items center
  text-align center
  padding 100px 0
  h1
    font-size 45px
    font-weight 400
    margin 0 0 20px 0   
  p 
    color grey
    line-height 22px
    width 600px

.team__images
  margin-bottom 30px
  button 
    cursor pointer
    margin-right 20px
    &:last-child
      margin-right 0
    img 
      height 100px
      width 100px

.teammate__btn1, .teammate__btn2, .teammate__btn3
  opacity 1

.about__teammate1, .about__teammate2, .about__teammate3
  display none
  span
    font-size 20px

.team__links
  margin-top 30px
  a
    color grey
    margin-right 20px
    &:last-child
      margin-right 0

.about__contact
  display flex
  justify-content center
  align-content center
  align-items center
  text-align center
  flex-direction column
  padding-bottom 100px
  h1
    font-size 45px
    font-weight 400
    margin 0 0 20px 0
  span
    line-height 22px
    margin-bottom 30px
    width 600px

.about__contact-inputs
  display flex
  flex-direction column

.about__contact-block
  margin-bottom 20px
  display flex
  input 
    border-radius 3px
    border 1px solid black
    width 100%
    padding 15px 20px
    margin-right 40px
    &:last-child
      margin-right 0

.about__contact-message
  margin-bottom 30px
  textarea 
    border-radius 3px
    border 1px solid black
    width 100%
    padding 15px 20px
    margin-right 40px

.about__contact-send
  display flex
  justify-content space-between
  align-content center
  
.contact__check-block
  display flex
  align-items center
  label
    padding-left 5px

#contact__send
  padding 12px 36px
  background-color #16eab7
  border-radius 5px
  text-transform uppercase
  font-weight 600
  cursor pointer
  color #fff
  box-shadow 0 0 1px black
