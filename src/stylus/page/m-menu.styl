.m-menu-link
    color #000
    height 25px
    width 25px
    display none
.m-menu
    position fixed
    left 0
    top 0
    height 800px
    width 100%
    text-align center
    list-style none
    font-size 2rem
    line-height 5rem
    margin 0
    padding 0
    background #fff
    display flex
    flex-direction column
    align-items center
    justify-content center
    transform translateX(100%)
    transition 0.5s

.m-menu__active
    transform translateX(0%)
    z-index 1

.close-menu
    position fixed
    right 2rem
    top 0
    font-size 5rem
    font-weight 900
    &:hover
        cursor pointer

.m-contacts-link
    display none
