.header
    display flex
    justify-content space-between
    flex-direction row
    padding 30px 70px

.header-content
    display flex
    justify-content space-between
    width 57%

.header-btns
    button
        border none
        background none
        font-size 14px
        text-transform uppercase
        margin-right 10px
        cursor pointer
        &:hover
            font-weight 600

.header-text
    h1
        font-family 'Lexend Mega', sans-serif
        margin 0
        text-transform uppercase
        font-weight 700

.header-login
    display flex
    align-items center
    a
        color #000
        font-size 22px

.search__form
    position relative
    width 300px
    margin 0 auto
    border 0.1px solid #000
    input
        height 42px
        padding-left 15px
    button
        height 42px
        width 42px
        position absolute
        top 0
        right 0
        cursor pointer
        &:before
            content "\f002"
            font-family FontAwesome

.search__form input,
button
    border none
    outline none
    background transparent

.arrow
    margin 30px 0
    display flex
    justify-content center
    flex-direction row
    align-items center
    p
        padding-left 15px
    a
        text-decoration none
        color #000
        padding-right 15px
    i
        color grey

.clothes__content
    padding 50px 200px 100px 200px
    display flex
    justify-content space-around
    flex-direction row

.clothes__content--primary
    display flex
    flex-direction column
    justify-content center
    text-align center
    width 300px
    height 350px
    img
        width 300px
        height 350px
    span
        padding 10px 0
        font-weight 600
    p
        margin 0
        padding-bottom 10px

