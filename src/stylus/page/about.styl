.about__body
  font-family 'Raleway'

.about__header
  background linear-gradient(to right, #16ebbe, #04b4cb)
  padding 50px 70px 190px 70px

.about__top
  display flex
  flex-direction row
  flex-wrap nowrap
  justify-content space-between

.about__logo
  display flex
  img 
    height 30px
    width 30px
  p
    text-transform uppercase
    margin 0
    font-size 15px
    color #fff
  
.about__nav
  display flex
  flex-direction row
  justify-content center
  align-items center
  a
    text-decoration none
    color #fff
    margin-right 50px
    &:last-child
      margin-right 0
    &:hover
      color #000

.about__login
  display flex
  justify-content right

#about__login-btn
  padding 8px 20px
  border 1px solid #fff
  color #fff
  cursor pointer
  &:hover
    background-color #fff
    color #000

.about__menu
  margin-top 170px
  display flex
  flex-direction row
  justify-content space-between

.about__menu-content
  padding-right 100px
  display flex
  justify-content space-between
  flex-direction column
  h1
    margin 0
    text-transform uppercase
    color #fff
    font-size 55px

  span
    color #fff
    font-size 18px
    line-height 32px

.about__menu-vid
  img 
    opacity 50%
    width 600px
    height 320px

.about__menu-buttons
  button 
    padding 22px 42px
    border-radius 5px
    text-transform uppercase
    cursor pointer
    &:first-child
      margin-right 30px

#about__buybtn
  background #000
  color #fff

#about__trybtn
  background #fff
  color #000

.about__content
  padding 100px

.about__content-text
  display flex
  flex-direction column
  align-items center
  align-content center
  padding-bottom 100px
  h1
    margin 0
    font-size 45px
    font-weight 400
    padding-bottom 20px
  h2 
    font-size 25px
    color grey
    margin 0
    font-weight 400
    padding-bottom 20px
  span
    width 50%
    color grey

.about__content-tips
  display flex
  justify-content space-between
  margin-bottom 100px

.about__tip
  width 350px
  display flex
  justify-content center
  flex-direction column
  align-items center
  img 
    height 70px
    width 70px
  h3 
    margin 30px 0 20px 0
    font-size 24px
  span
    color grey

.about__content-bottom
  display flex
  justify-content center
  button 
    padding 18px 34px
    background-color green
    border-radius 5px
    text-transform uppercase
    font-weight 600
    cursor pointer
    color #fff
